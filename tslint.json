{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "align": [
      true,
      "parameters",
      "statements"
    ],
    "curly": [true, "ignore-same-line"],
    "indent": [
      true, "spaces", 2
    ],
    "max-line-length": [true, 80],
    "no-console": [
      false
    ],
    "no-floating-promises": [true],
    "no-reference": false
  },
  "rulesDirectory": []
}
