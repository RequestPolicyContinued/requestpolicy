{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "align": [
      true,
      "parameters",
      "statements"
    ],
    "ban-types": [true, "browser"],
    "curly": [true, "ignore-same-line"],
    "import-spacing": false,
    "indent": [
      true, "spaces", 2
    ],
    "max-line-length": [
      true,
      {
        "ignore-pattern": "^(\\s*((//|\\*)\\s+)?(.{1,3} )?(https?)://[^ ]+|.*// badword-linter:.*|/// <reference .*)$",
        "limit": 80
      }
    ],
    "no-console": [
      false
    ],
    "no-duplicate-imports": true,
    "no-floating-promises": [true],
    "no-reference": false
  },
  "rulesDirectory": []
}
