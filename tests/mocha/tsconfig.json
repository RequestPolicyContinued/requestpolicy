{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "module": "commonjs",
    "target": "es2015",
    "lib": [
      "es5",
      "es2015",
    ],
    "typeRoots": [
      "../../node_modules/@types",
      "../../node_modules/web-ext-types",
    ],

    "baseUrl": "./",
    "paths": {
      "*": [
        "*",
        "../../src/content/*",
        "../../src/conditional/legacy/content/*",
        "../../node_modules/*",
      ]
    }
  }
  ,
  "include": [
    "./**/*",
  ],
  "exclude": [
    "node_modules",
    "**/third-party",
    "../../src",
  ]
}
